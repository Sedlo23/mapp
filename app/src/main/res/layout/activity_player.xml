<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sedlo.mapp1.Activity.PlayersListActivity"
    android:background="@android:color/black"
    android:theme="@android:style/Theme.Holo.NoActionBar.Fullscreen">


    <Button
        android:id="@+id/btn_new_player"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+ New Player" />




    <ListView
        android:id="@+id/listview_players"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:listitem="@layout/tab_player">
    </ListView>
    <com.john.waveview.WaveView
        android:id="@+id/waveView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="false"
        app:above_wave_color="@color/Yellow"
        app:blow_wave_color="@color/Yellow"
        app:wave_height="large"
        app:wave_hz="slow"
        app:wave_length="large" />

</LinearLayout>